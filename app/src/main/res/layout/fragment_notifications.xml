<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notifications.NotificationsFragment">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/colorTheme"
        android:contentDescription="@string/headerImage" />
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="100dp"
                android:layout_marginHorizontal="50dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/shareView"
                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_width="150dp"
                    android:src="@drawable/ic_undraw_social_share_algy"
                    android:layout_height="150dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/colorAccent"
                    android:layout_margin="8dp"
                    android:textAlignment="textEnd"
                    android:text="Share now"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="50dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/rateView"
                    >
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:layout_width="150dp"
                        android:src="@drawable/ic_undraw_gift_card_6ekc"
                        android:layout_height="150dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/colorAccent"
                        android:layout_margin="8dp"
                        android:textAlignment="textEnd"
                        android:text="Rate now"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>